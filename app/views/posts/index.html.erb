<form action="/posts" method="get">
  <div class="search-bar bordered">
      <div class="row">
          <div class="col-md-12">
              <div class="input-group">
                  <input type="text" name="search" class="form-control"
                    placeholder='<%= t ".Enter title to search" %>'>
                  <span class="input-group-btn">
                      <button class="btn blue uppercase bold" type="submit">
                        <%= t ".Search" %>
                      </button>
                  </span>
              </div>
          </div>
      </div>
  </div>
</form>
<br>

<div class="portlet box green">
  <div class="portlet-title">
      <div class="caption">
        <%= link_to new_post_path do %>
          <button type="button" class="btn default">
            <%= t ".New post" %>
          </button>
        <% end %>
        <form action = "posts" method="get">
          <input type="hidden" name="sort" value="desc">
          <button type="submit" class="btn default">
              <%= t ".View latest post" %>
          </button>
        </form>
      </div>
      <div class="tools"> </div>
  </div>
  <div class="portlet-body">
      <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
              <tr>
                  <th><%= t "Title" %></th>
                  <th><%= t "Created_at" %></th>
                  <th><%= t "User" %></th>
                  <th colspan="3"></th>
              </tr>
          </thead>
          <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= post.title %></td>
                  <td><%= post.created_at %></td>
                  <td><%= link_to post.user.name, post.user %></td>
                  <td><%= link_to t("Show"), post %></td>
                  <td><%= link_to t("Edit"), edit_post_path(post) %></td>
                  <td><%= link_to t("Destroy"), post, method: :delete,
                    data: {confirm: t("Are you sure?")} %></td>
                </tr>
              <% end %>
          </tbody>
      </table>
  </div>
</div>

<%= will_paginate @posts %>
