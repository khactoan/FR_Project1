<form action="/posts" method="get">
  <div class="search-bar bordered">
      <div class="row">
          <div class="col-md-12">
              <div class="input-group">
                  <input type="text" name="search" class="form-control" placeholder="Enter title to search">
                  <span class="input-group-btn">
                      <button class="btn blue uppercase bold" type="submit">Search</button>
                  </span>
              </div>
          </div>
      </div>
  </div>
</form>
<br>

<div class="portlet box green">
  <div class="portlet-title">
      <div class="caption">
        <%= link_to new_post_path do %>
          <button type="button" class="btn default"><%= t ".New post" %></button>
        <% end %>
      </div>
      <div class="tools"> </div>
  </div>
  <div class="portlet-body">
      <table class="table table-striped table-bordered table-hover" id="sample_2">
          <thead>
              <tr>
                  <th>Title</th>
                  <th>Created_at</th>
                  <th>User</th>
                  <th colspan="3"></th>
              </tr>
          </thead>
          <tbody>
              <% @posts.each do |post| %>
                <tr>
                  <td><%= post.title %></td>
                  <td><%= post.created_at %></td>
                  <td><%= link_to post.user.name, post.user %></td>
                  <td><%= link_to "Show", post %></td>
                  <td><%= link_to "Edit", edit_post_path(post) %></td>
                  <td><%= link_to "Destroy", post, method: :delete, data: { confirm: "Are you sure?" } %></td>
                </tr>
              <% end %>
          </tbody>
      </table>
  </div>
</div>

<%= will_paginate @posts %>
